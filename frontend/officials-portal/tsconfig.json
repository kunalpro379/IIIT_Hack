{
  "compilerOptions": {
    // ...other options
    "types": ["node", "leaflet"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/types/*.d.ts",
    "src/assets/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
